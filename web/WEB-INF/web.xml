<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--welcome file-->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mateshop.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.mateshop.servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>com.mateshop.servlets.addToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuantityUpdateServlet</servlet-name>
        <servlet-class>com.mateshop.servlets.QuantityUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCartProduct</servlet-name>
        <servlet-class>com.mateshop.servlets.RemoveCartProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderNow</servlet-name>
        <servlet-class>com.mateshop.servlets.OrderNow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>com.mateshop.servlets.CheckOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelOrderServlet</servlet-name>
        <servlet-class>com.mateshop.servlets.CancelOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/user-login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/log-out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/add-to-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuantityUpdateServlet</servlet-name>
        <url-pattern>/quantity-update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCartProduct</servlet-name>
        <url-pattern>/remove-cart-product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderNow</servlet-name>
        <url-pattern>/order-now</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/check-out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelOrderServlet</servlet-name>
        <url-pattern>/cancel-order</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
